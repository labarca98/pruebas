		<on-error-continue type="ANY" enableNotifications="true" logException="true" doc:name="On Error Continue" doc:id="40180633-7687-4269-9ac4-b63bbe1ca580">
			<set-variable value="#[500]" doc:name="Set HTTP Status - 500" variableName="httpStatus"/>
			<set-variable value="INTERNAL_SERVER_ERROR" doc:name="Set Error Code" doc:id="390a3561-aa8c-4eee-80cd-ce5fa44414cf" variableName="errorCode" />
			<set-variable value="Unable to fullfil request due to internal error." doc:name="Set Error Message" doc:id="237f2698-92dd-4e00-a11f-1ffde07e470c" variableName="errorMessage"/>
			<flow-ref doc:name="global-prepare-error-response-sub-flow" doc:id="ef951fe8-521e-4c3a-b907-a77d766679b5" name="global-prepare-error-response-sub-flow"/>
		</on-error-continue>
		
	</error-handler>
    
    <sub-flow name="global-prepare-error-response-sub-flow" doc:id="144512c8-8979-4ad1-ad6e-4daef8496754">
		<logger level="ERROR" doc:name="Logger" doc:id="d0135211-4b57-4bad-bf53-b5bd0ea2338e" message="Status Code [#[vars.httpStatus]] - Error Code [#[vars.errorCode]] - Error Message [#[if(vars.errorMessage != null) vars.errorMessage else '']] - Error Description [#[if(vars.errorDescription != null) vars.errorDescription else '']]" />
		<ee:transform doc:name="Compose Error Payload" doc:id="a9224e8d-d3a4-47b4-9230-a946a8f49650">
			<ee:message>
				<ee:set-payload><![CDATA[%dw 2.0
output application/json
---
error: {
	error_code: vars.errorCode,
	error_datetime: now() as String { format: "yyyy-MM-dd'T'HH:mm:ssZ" },
	(error_message: vars.errorMessage) if(vars.errorMessage != null),
	(error_description: vars.errorDescription) if(vars.errorDescription != null)
}]]></ee:set-payload>
			</ee:message>
		</ee:transform>
    </sub-flow>
	
